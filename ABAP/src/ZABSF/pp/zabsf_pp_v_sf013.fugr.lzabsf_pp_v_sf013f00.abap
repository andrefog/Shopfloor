    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP015 WHERE
  AREAID = ZABSF_PP_V_SF013-AREAID AND
  WERKS = ZABSF_PP_V_SF013-WERKS AND
  ARBPL = ZABSF_PP_V_SF013-ARBPL AND
  STPRSNID = ZABSF_PP_V_SF013-STPRSNID AND
  ENDDA = ZABSF_PP_V_SF013-ENDDA .
    IF SY-SUBRC = 0.
    DELETE ZABSF_PP015 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZABSF_PP015_T WHERE
    AREAID = ZABSF_PP015-AREAID AND
    WERKS = ZABSF_PP015-WERKS AND
    ARBPL = ZABSF_PP015-ARBPL AND
    STPRSNID = ZABSF_PP015-STPRSNID AND
    SPRAS = SY-LANGU .
    IF SY-SUBRC = 0.
    SELECT COUNT(*) FROM ZABSF_PP015 WHERE
    AREAID EQ ZABSF_PP015_T-AREAID AND
    WERKS EQ ZABSF_PP015_T-WERKS AND
    ARBPL EQ ZABSF_PP015_T-ARBPL AND
    STPRSNID EQ ZABSF_PP015_T-STPRSNID .
      IF SY-DBCNT EQ 0.
