    AREAID = ZABSF_PP015-AREAID AND
    WERKS = ZABSF_PP015-WERKS AND
    ARBPL = ZABSF_PP015-ARBPL AND
    STPRSNID = ZABSF_PP015-STPRSNID .
      ENDIF.
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP015 WHERE
  AREAID = ZABSF_PP_V_SF013-AREAID AND
  WERKS = ZABSF_PP_V_SF013-WERKS AND
  ARBPL = ZABSF_PP_V_SF013-ARBPL AND
  STPRSNID = ZABSF_PP_V_SF013-STPRSNID AND
  ENDDA = ZABSF_PP_V_SF013-ENDDA .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZABSF_PP015.
    ENDIF.
ZABSF_PP015-MANDT =
ZABSF_PP_V_SF013-MANDT .
ZABSF_PP015-AREAID =
ZABSF_PP_V_SF013-AREAID .
ZABSF_PP015-WERKS =
ZABSF_PP_V_SF013-WERKS .
ZABSF_PP015-ARBPL =
ZABSF_PP_V_SF013-ARBPL .
ZABSF_PP015-STPRSNID =
ZABSF_PP_V_SF013-STPRSNID .
ZABSF_PP015-ENDDA =
ZABSF_PP_V_SF013-ENDDA .
ZABSF_PP015-BEGDA =
ZABSF_PP_V_SF013-BEGDA .
ZABSF_PP015-TIP_RESPON =
ZABSF_PP_V_SF013-TIP_RESPON .
ZABSF_PP015-TIP_STOP =
