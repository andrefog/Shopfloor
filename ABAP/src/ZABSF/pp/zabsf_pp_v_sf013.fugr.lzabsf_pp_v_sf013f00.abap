    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZABSF_PP015_T WHERE
    AREAID = ZABSF_PP015-AREAID AND
    WERKS = ZABSF_PP015-WERKS AND
    ARBPL = ZABSF_PP015-ARBPL AND
    STPRSNID = ZABSF_PP015-STPRSNID AND
    SPRAS = SY-LANGU .
      IF SY-SUBRC <> 0.   "insert preprocessing: init WA
        CLEAR ZABSF_PP015_T.
