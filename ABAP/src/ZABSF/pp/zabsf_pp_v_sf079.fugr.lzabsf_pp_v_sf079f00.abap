     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP079 WHERE
  WERKS = ZABSF_PP_V_SF079-WERKS AND
  AREAID = ZABSF_PP_V_SF079-AREAID AND
  PARID = ZABSF_PP_V_SF079-PARID .
    IF SY-SUBRC = 0.
    DELETE ZABSF_PP079 .
    ENDIF.
    DELETE FROM ZABSF_PP079_T WHERE
    WERKS = ZABSF_PP079-WERKS AND
    AREAID = ZABSF_PP079-AREAID AND
    PARID = ZABSF_PP079-PARID .
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP079 WHERE
  WERKS = ZABSF_PP_V_SF079-WERKS AND
  AREAID = ZABSF_PP_V_SF079-AREAID AND
  PARID = ZABSF_PP_V_SF079-PARID .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZABSF_PP079.
    ENDIF.
ZABSF_PP079-MANDT =
ZABSF_PP_V_SF079-MANDT .
ZABSF_PP079-WERKS =
ZABSF_PP_V_SF079-WERKS .
ZABSF_PP079-AREAID =
ZABSF_PP_V_SF079-AREAID .
ZABSF_PP079-PARID =
ZABSF_PP_V_SF079-PARID .
ZABSF_PP079-STATUS =
ZABSF_PP_V_SF079-STATUS .
    IF SY-SUBRC = 0.
    UPDATE ZABSF_PP079 ##WARN_OK.
    ELSE.
    INSERT ZABSF_PP079 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZABSF_PP079_T WHERE
    WERKS = ZABSF_PP079-WERKS AND
    AREAID = ZABSF_PP079-AREAID AND
    PARID = ZABSF_PP079-PARID AND
    SPRAS = SY-LANGU .
      IF SY-SUBRC <> 0.   "insert preprocessing: init WA
        CLEAR ZABSF_PP079_T.
ZABSF_PP079_T-WERKS =
ZABSF_PP079-WERKS .
ZABSF_PP079_T-AREAID =
ZABSF_PP079-AREAID .
ZABSF_PP079_T-PARID =
ZABSF_PP079-PARID .
ZABSF_PP079_T-SPRAS =
SY-LANGU .
      ENDIF.
ZABSF_PP079_T-DESCRIPTION =
ZABSF_PP_V_SF079-DESCRIPTION .
    IF SY-SUBRC = 0.
    UPDATE ZABSF_PP079_T ##WARN_OK.
    ELSE.
    INSERT ZABSF_PP079_T .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZABSF_PP_V_SF079-UPD_FLAG,
STATUS_ZABSF_PP_V_SF079-UPD_CHECKD.
