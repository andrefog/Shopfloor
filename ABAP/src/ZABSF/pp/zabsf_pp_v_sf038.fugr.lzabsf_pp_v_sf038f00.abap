ZABSF_PP057-TIME =
ZABSF_PP_V_SF038-TIME .
ZABSF_PP057-OPRID =
ZABSF_PP_V_SF038-OPRID .
ZABSF_PP057-ZCNTRL =
ZABSF_PP_V_SF038-ZCNTRL .
ZABSF_PP057-LMNGA =
ZABSF_PP_V_SF038-LMNGA .
ZABSF_PP057-GMEIN =
ZABSF_PP_V_SF038-GMEIN .
    IF SY-SUBRC = 0.
    UPDATE ZABSF_PP057 ##WARN_OK.
    ELSE.
