FORM DB_UPD_ZABSF_PP_V_SF038 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZABSF_PP_V_SF038.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZABSF_PP_V_SF038-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP057 WHERE
  AREAID = ZABSF_PP_V_SF038-AREAID AND
  WAREID = ZABSF_PP_V_SF038-WAREID AND
  MATNR = ZABSF_PP_V_SF038-MATNR AND
  DATA = ZABSF_PP_V_SF038-DATA AND
  TIME = ZABSF_PP_V_SF038-TIME AND
  OPRID = ZABSF_PP_V_SF038-OPRID .
    IF SY-SUBRC = 0.
    DELETE ZABSF_PP057 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP057 WHERE
  AREAID = ZABSF_PP_V_SF038-AREAID AND
  WAREID = ZABSF_PP_V_SF038-WAREID AND
  MATNR = ZABSF_PP_V_SF038-MATNR AND
  DATA = ZABSF_PP_V_SF038-DATA AND
  TIME = ZABSF_PP_V_SF038-TIME AND
  OPRID = ZABSF_PP_V_SF038-OPRID .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZABSF_PP057.
    ENDIF.
ZABSF_PP057-MANDT =
ZABSF_PP_V_SF038-MANDT .
ZABSF_PP057-AREAID =
ZABSF_PP_V_SF038-AREAID .
ZABSF_PP057-WAREID =
ZABSF_PP_V_SF038-WAREID .
ZABSF_PP057-MATNR =
ZABSF_PP_V_SF038-MATNR .
ZABSF_PP057-DATA =
