FORM DB_UPD_ZABSF_PP_V_EQUI .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZABSF_PP_V_EQUI.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZABSF_PP_V_EQUI-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_EQUIPMENTS WHERE
  ID = ZABSF_PP_V_EQUI-ID AND
  AREAID = ZABSF_PP_V_EQUI-AREAID .
    IF SY-SUBRC = 0.
    DELETE ZABSF_EQUIPMENTS .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_EQUIPMENTS WHERE
  ID = ZABSF_PP_V_EQUI-ID AND
  AREAID = ZABSF_PP_V_EQUI-AREAID .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZABSF_EQUIPMENTS.
    ENDIF.
ZABSF_EQUIPMENTS-MANDT =
ZABSF_PP_V_EQUI-MANDT .
ZABSF_EQUIPMENTS-ID =
ZABSF_PP_V_EQUI-ID .
ZABSF_EQUIPMENTS-AREAID =
ZABSF_PP_V_EQUI-AREAID .
ZABSF_EQUIPMENTS-WORKCENTERID =
ZABSF_PP_V_EQUI-WORKCENTERID .
ZABSF_EQUIPMENTS-EQUIPMENT =
ZABSF_PP_V_EQUI-EQUIPMENT .
    IF SY-SUBRC = 0.
    UPDATE ZABSF_EQUIPMENTS ##WARN_OK.
    ELSE.
    INSERT ZABSF_EQUIPMENTS .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZABSF_PP_V_EQUI-UPD_FLAG,
STATUS_ZABSF_PP_V_EQUI-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
