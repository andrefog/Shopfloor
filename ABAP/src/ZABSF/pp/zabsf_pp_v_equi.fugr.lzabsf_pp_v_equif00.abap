FORM GET_DATA_ZABSF_PP_V_EQUI.
  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM ZABSF_EQUIPMENTS WHERE
(VIM_WHERETAB) .
    CLEAR ZABSF_PP_V_EQUI .
ZABSF_PP_V_EQUI-MANDT =
ZABSF_EQUIPMENTS-MANDT .
ZABSF_PP_V_EQUI-ID =
ZABSF_EQUIPMENTS-ID .
