  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP001 WHERE
  AREAID = ZABSF_PP_V_SF001-AREAID AND
  WERKS = ZABSF_PP_V_SF001-WERKS AND
  SHIFTID = ZABSF_PP_V_SF001-SHIFTID AND
  ENDDA = ZABSF_PP_V_SF001-ENDDA .
    IF SY-SUBRC = 0.
    DELETE ZABSF_PP001 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZABSF_PP001_T WHERE
    AREAID = ZABSF_PP001-AREAID AND
    WERKS = ZABSF_PP001-WERKS AND
    SHIFTID = ZABSF_PP001-SHIFTID AND
    SPRAS = SY-LANGU .
    IF SY-SUBRC = 0.
    SELECT COUNT(*) FROM ZABSF_PP001 WHERE
    AREAID EQ ZABSF_PP001_T-AREAID AND
    WERKS EQ ZABSF_PP001_T-WERKS AND
    SHIFTID EQ ZABSF_PP001_T-SHIFTID .
      IF SY-DBCNT EQ 0.
    DELETE FROM ZABSF_PP001_T WHERE
    AREAID = ZABSF_PP001-AREAID AND
    WERKS = ZABSF_PP001-WERKS AND
    SHIFTID = ZABSF_PP001-SHIFTID .
      ENDIF.
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP001 WHERE
  AREAID = ZABSF_PP_V_SF001-AREAID AND
  WERKS = ZABSF_PP_V_SF001-WERKS AND
  SHIFTID = ZABSF_PP_V_SF001-SHIFTID AND
  ENDDA = ZABSF_PP_V_SF001-ENDDA .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZABSF_PP001.
    ENDIF.
ZABSF_PP001-MANDT =
ZABSF_PP_V_SF001-MANDT .
