    IF SY-SUBRC = 0.
    UPDATE ZABSF_PP011 ##WARN_OK.
    ELSE.
    INSERT ZABSF_PP011 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZABSF_PP011_T WHERE
    AREAID = ZABSF_PP011-AREAID AND
    WERKS = ZABSF_PP011-WERKS AND
    ARBPL = ZABSF_PP011-ARBPL AND
    STPRSNID = ZABSF_PP011-STPRSNID AND
    SPRAS = SY-LANGU .
      IF SY-SUBRC <> 0.   "insert preprocessing: init WA
        CLEAR ZABSF_PP011_T.
ZABSF_PP011_T-AREAID =
ZABSF_PP011-AREAID .
ZABSF_PP011_T-WERKS =
ZABSF_PP011-WERKS .
ZABSF_PP011_T-ARBPL =
ZABSF_PP011-ARBPL .
ZABSF_PP011_T-STPRSNID =
ZABSF_PP011-STPRSNID .
ZABSF_PP011_T-SPRAS =
SY-LANGU .
      ENDIF.
ZABSF_PP011_T-STPRSN_DESC =
ZABSF_PP_V_SF010-STPRSN_DESC .
    IF SY-SUBRC = 0.
    UPDATE ZABSF_PP011_T ##WARN_OK.
    ELSE.
