FORM DB_UPD_ZABSF_PP_V_SF010 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZABSF_PP_V_SF010.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZABSF_PP_V_SF010-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP011 WHERE
  AREAID = ZABSF_PP_V_SF010-AREAID AND
  WERKS = ZABSF_PP_V_SF010-WERKS AND
  ARBPL = ZABSF_PP_V_SF010-ARBPL AND
  STPRSNID = ZABSF_PP_V_SF010-STPRSNID AND
  ENDDA = ZABSF_PP_V_SF010-ENDDA .
    IF SY-SUBRC = 0.
    DELETE ZABSF_PP011 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZABSF_PP011_T WHERE
    AREAID = ZABSF_PP011-AREAID AND
    WERKS = ZABSF_PP011-WERKS AND
    ARBPL = ZABSF_PP011-ARBPL AND
    STPRSNID = ZABSF_PP011-STPRSNID AND
    SPRAS = SY-LANGU .
    IF SY-SUBRC = 0.
    SELECT COUNT(*) FROM ZABSF_PP011 WHERE
    AREAID EQ ZABSF_PP011_T-AREAID AND
    WERKS EQ ZABSF_PP011_T-WERKS AND
    ARBPL EQ ZABSF_PP011_T-ARBPL AND
    STPRSNID EQ ZABSF_PP011_T-STPRSNID .
      IF SY-DBCNT EQ 0.
    DELETE FROM ZABSF_PP011_T WHERE
    AREAID = ZABSF_PP011-AREAID AND
    WERKS = ZABSF_PP011-WERKS AND
    ARBPL = ZABSF_PP011-ARBPL AND
    STPRSNID = ZABSF_PP011-STPRSNID .
      ENDIF.
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZABSF_PP011 WHERE
  AREAID = ZABSF_PP_V_SF010-AREAID AND
  WERKS = ZABSF_PP_V_SF010-WERKS AND
  ARBPL = ZABSF_PP_V_SF010-ARBPL AND
  STPRSNID = ZABSF_PP_V_SF010-STPRSNID AND
  ENDDA = ZABSF_PP_V_SF010-ENDDA .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZABSF_PP011.
    ENDIF.
ZABSF_PP011-MANDT =
ZABSF_PP_V_SF010-MANDT .
ZABSF_PP011-AREAID =
ZABSF_PP_V_SF010-AREAID .
ZABSF_PP011-WERKS =
ZABSF_PP_V_SF010-WERKS .
ZABSF_PP011-ARBPL =
ZABSF_PP_V_SF010-ARBPL .
ZABSF_PP011-STPRSNID =
ZABSF_PP_V_SF010-STPRSNID .
ZABSF_PP011-ENDDA =
ZABSF_PP_V_SF010-ENDDA .
ZABSF_PP011-BEGDA =
ZABSF_PP_V_SF010-BEGDA .
ZABSF_PP011-NOTIF_TYPE =
ZABSF_PP_V_SF010-NOTIF_TYPE .
ZABSF_PP011-TIP_RESPON =
ZABSF_PP_V_SF010-TIP_RESPON .
ZABSF_PP011-TIP_STOP =
ZABSF_PP_V_SF010-TIP_STOP .
ZABSF_PP011-OEE =
ZABSF_PP_V_SF010-OEE .
